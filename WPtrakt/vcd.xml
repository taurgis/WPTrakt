<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">
  <CommandSet xml:lang="en-us" Name="USEnglish">
    <CommandPrefix>trakt</CommandPrefix>
    <Example> Find me / Search for a movie! </Example>
    <Command Name="lookup">
      <Example> Find Heroes </Example>
      <ListenFor>Find [me] [a] [movie] [show]</ListenFor>
      <ListenFor>Lookup [a] [movie] [show]</ListenFor>
      <ListenFor>Search [for] [the] [movie] [show]</ListenFor>
      <Feedback> Let's go find it!</Feedback>
      <Navigate Target="/Search.xaml"/>
    </Command>
    <Command Name="myMovies">
      <Example> My Movies </Example>
      <ListenFor>[open] [my] movies</ListenFor>
      <ListenFor>[open] [my] movie collection</ListenFor>
      <ListenFor>[open] [my] films [collection]</ListenFor>
      <Feedback> Going to your movies </Feedback>
      <Navigate Target="/MyMovies.xaml"/>
    </Command>
    <Command Name="myShows">
      <Example> My Shows </Example>
      <ListenFor>[open] [my] shows [collection]</ListenFor>
      <Feedback> Going to your shows </Feedback>
      <Navigate Target="/MyShows.xaml"/>
    </Command>
    <Command Name="upComming">
      <Example> Upcomming / What's next </Example>
      <ListenFor> what's next? </ListenFor>
      <ListenFor> upcomming [episodes] </ListenFor>
      <ListenFor> what is on tv </ListenFor>
      <Feedback> Let's see whats playing soon! </Feedback>
      <Navigate Target="/MyShows.xaml?page=1"/>
    </Command>
  </CommandSet>
</VoiceCommands>